@page
@model PromerceHelpDesk.Web.Pages.Account.ProfileModel
@{
}

@section Scripts{
    <script src="~/js/pages/profile.js"></script>
}

<div class="container-fluid mt-5 p-3 border border-warning rounded">
    <h3>@_L["Change Password"]</h3>
    <div class="row">   
        <div class="form-group">
            <label for="current_password" class="form-label">@_L["Current Password"]</label>
            <input type="password" id="current_password" class="form-control" value="" />
        </div>
        <div class="form-group">
            <label for="new_password" class="form-label">@_L["New Password"]</label>
            <input type="password" id="new_password" class="form-control" value="" />
        </div>
        <div class="form-group">
            <label for="confirm_password" class="form-label">@_L["Confirm Password"]</label>
            <input type="password" id="confirm_password" class="form-control" value="" />
        </div>
    </div>
    <div class="row mt-5">
        <button class="btn btn-danger" onclick="RestPassword()">@_L["Save"]</button>
    </div>
</div>