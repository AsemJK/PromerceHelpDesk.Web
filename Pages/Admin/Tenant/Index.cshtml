@page
@model PromerceHelpDesk.Web.Pages.Admin.Tenant.IndexModel
@{
}

@section Styles {
    <link href="~/js/datatable-jquery/datatables.bootstrap5.min.css" rel="stylesheet" />
}

<a href="/admin" class="text-decoration-none"><i class="fa fa-backward fs-3"></i></a>

<div class="container-fluid mt-5 p-3 border border-warning rounded">
    <div class="row">
        <h4 class="font-weight-bold">@_L["Add New"]</h4>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form role="form">
                <div class="form-group">
                    <label for="TenantName">
                        @_L["Tenant Name"]
                    </label>
                    <input type="text" class="form-control" id="TenantName" required />
                </div>
                <div class="form-group">
                    <label for="TenantCode">
                        @_L["Tenant Code"]
                    </label>
                    <input type="text" class="form-control" id="TenantCode" required />
                </div>
                <input type="submit" id="btnSave" class="btn btn-primary mt-5" value="@_L["Save"]" />
            </form>
        </div>
    </div>
</div>
<div class="container mt-5">
    <table id="tenantTable" class="table table-striped">
        <thead>
            <tr>
                <th>@_L["Name"]</th>
                <th>@_L["Code"]</th>
                <th>@_L["Update Time"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>



@section Scripts {
    <script src="~/js/datatable-jquery/jquery.datatables.min.js"></script>
    <script src="~/js/datatable-jquery/datatables.bootstrap5.min.js"></script>
    <script src="~/js/pages/tenant.js"></script>
}