@page
@model PromerceHelpDesk.Web.Pages.Incidents.AddModel
@{
}
@section Scripts {
    <script src="/js/pages/incidents-add.js"></script>    
}
<h3 class="text-center">@_L["New Incident"]</h3>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <form role="form" onsubmit="return false;">
                <div class="form-group mb-1">
                    <label for="subject" class="form-label"><b>@_L["Subject"]</b></label>
                    <textarea name="subject" id="txt_subject" class="form-control" rows="2" cols="auto"></textarea>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="mainSystemModules" class="form-label"><b>@_L["Project"]</b></label>
                            <select class="form-control" id="ddlProject" onchange="FillMainSystemModules(this.value)"></select>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">   
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="mainSystemModules" class="form-label"><b>@_L["MainSystemModules"]</b></label>
                            <select class="form-control" id="mainSystemModules" onchange="FillSubModules(this.value)"></select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="subSystemModules" class="form-label"><b>@_L["SubSystemModules"]</b></label>
                            <select class="form-control" id="subSystemModules" onchange="SetPriority(this.value)"></select>
                        </div>
                    </div>
                </div>              
                <div class="form-group my-4">
                    <label for="selPriority"><b>@_L["Priority"]</b></label>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input mx-3" checked type="radio" name="opPriority" value="0" id="opPriority_0">
                        <label class="form-check-label" for="opPriority_0">@_L["Low"]</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="opPriority" value="1" id="opPriority_1">
                        <label class="form-check-label" for="opPriority_1">@_L["Normal"]</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="opPriority" value="2" id="opPriority_2">
                        <label class="form-check-label" for="opPriority_2">@_L["Emergency"]</label>
                    </div>
                </div>
                <div class="form-group mt-5">
                    <label for="fleAttachments"><b>@_L["Attachments"]</b></label>
                    <input type="file" accept=".jpg, .jpeg, .png" name="Attachments" class="form-control-file mx-3" id="fleAttachments" multiple />
                </div>
                <br />
                <button id="btnSave" type="submit" onclick="AddIncident()" class="btn btn-primary">@_L["Submit"]</button>
            </form>
        </div>
    </div>
</div>